// Root tsconfig.json
// Do not "extend" from this file, use @foxglove/tsconfig/tsconfig.base.json instead.
// Do not "include" files here if they are already included by another tsconfig.json.
{
  "extends": "@foxglove/tsconfig/tsconfig.base.json",
  "include": [
    "./*.ts",
    "./*.js",
    "./**/jest.config.ts",
    "./ci/**/*.ts",
    "./eslint-rules/*.js",
    "./test/**/*.ts",
    "./resources/notarize.ts",
    "./package.json"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": true
  }
}
